<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/salary_ll_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/primary"
        android:elevation="4dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/salary_cb_adv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Advanced mode" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/salary_ll_1"
        android:fillViewport="true"
        android:measureAllChildren="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/salary_card_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:clickable="true"
                android:focusable="true"
                android:stateListAnimator="@anim/raise"
                materialdesign:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/salary_tv_1"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="Payment per hour" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/salary_et_1"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginRight="16dp"
                                android:gravity="center"
                                android:hint="Payment per hour"
                                android:inputType="numberDecimal"
                                android:numeric="integer|decimal"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/salary_tv_2"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="Worked hours" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/salary_et_2"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginRight="16dp"
                                android:gravity="center"
                                android:hint="Hours"
                                android:inputType="numberDecimal"
                                android:numeric="integer|decimal"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/salary_card_overtime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/salary_card_main"
                android:animateLayoutChanges="true"
                android:clickable="true"
                android:focusable="true"
                android:stateListAnimator="@anim/raise"
                materialdesign:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary">

                        <TextView
                            android:id="@+id/salary_tv_3"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Overtime hours" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/salary_et_3"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="Hours"
                                android:inputType="numberDecimal"
                                android:numeric="integer|decimal"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/salary_et_4"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="Payment per hour"
                                android:inputType="numberDecimal"
                                android:numeric="integer|decimal"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/salary_card_tax"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/salary_card_overtime"
                android:animateLayoutChanges="true"
                android:clickable="true"
                android:focusable="true"
                android:stateListAnimator="@anim/raise"
                materialdesign:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary">

                        <TextView
                            android:id="@+id/salary_tv_4"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Tax" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/salary_et_5"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="Pension insurance [%]"
                                android:inputType="numberDecimal"
                                android:numeric="integer|decimal"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/salary_et_6"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="Health insurance [%]"
                                android:inputType="numberDecimal"
                                android:numeric="integer|decimal"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/salary_et_7_1"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="Tax (I) [%]"
                                android:inputType="numberDecimal"
                                android:numeric="integer|decimal"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/salary_et_7_2"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="Tax (II) [%]"
                                android:inputType="numberDecimal"
                                android:numeric="integer|decimal"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/salary_et_7_3"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="Tax (III) [%]"
                                android:inputType="numberDecimal"
                                android:numeric="integer|decimal"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/salary_card_additions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/salary_card_tax"
                android:animateLayoutChanges="true"
                android:clickable="true"
                android:focusable="true"
                android:stateListAnimator="@anim/raise"
                materialdesign:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary">

                        <TextView
                            android:id="@+id/salary_tv_5"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Additions" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/salary_tv_6"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="Coefficient" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/salary_et_9"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginRight="16dp"
                                android:gravity="center"
                                android:hint="Coefficient"
                                android:inputType="numberDecimal"
                                android:numeric="integer|decimal"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/salary_tv_7"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="Personal deduction" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/salary_et_10"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginRight="16dp"
                                android:gravity="center"
                                android:hint="Deduction amount"
                                android:inputType="numberDecimal"
                                android:numeric="integer|decimal"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal">

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FABSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:elevation="2dp"
        android:src="@drawable/ic_attach_money_black_24dp"
        android:stateListAnimator="@anim/raise"
        app:fabSize="normal"
        app:borderWidth="0dp"
        app:rippleColor="@color/primary_light" />

</RelativeLayout>