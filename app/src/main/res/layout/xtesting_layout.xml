<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/settings_ID"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/settings_CardView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusable="true"
            android:stateListAnimator="@anim/raise"
            materialdesign:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/settings_imageView1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center|top|left"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/settings_imageView1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/settings_textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="New Text" />

                    <TextView
                        android:id="@+id/settings_textView2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="New Text" />
                </LinearLayout>

                <Button
                    android:id="@+id/settings_btn_edit1"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center|right"
                    android:layout_marginEnd="16dp"
                    android:background="#00000000"
                    android:text="Edit" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/settings_CardView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_CardView1"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusable="true"
            android:stateListAnimator="@anim/raise"
            materialdesign:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/settings_imageView2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center|top|left"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/settings_imageView2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/settings_textView3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="New Text" />

                    <TextView
                        android:id="@+id/settings_textView4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="New Text" />
                </LinearLayout>

                <Button
                    android:id="@+id/settings_btn_edit2"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center|right"
                    android:layout_marginEnd="16dp"
                    android:background="#00000000"
                    android:text="Edit" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/settings_CardView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_CardView2"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:stateListAnimator="@anim/raise"
            materialdesign:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/settings_norma_iv1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center|top|left"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_norma" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/settings_norma_iv1">

                    <TextView
                        android:id="@+id/settings_norma_tv1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp" />

                    <TextView
                        android:id="@+id/settings_norma_tv2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/settings_norma_bt1"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginEnd="16dp"

                    android:background="#00000000"
                    android:text="Import"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>

</LinearLayout>