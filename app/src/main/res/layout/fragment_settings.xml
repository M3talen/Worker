<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_ID"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/settings_CardView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusable="true"
            android:stateListAnimator="@anim/raise"
            materialdesign:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/settings_imageView1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center|top|left"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/settings_imageView1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/settings_textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"/>

                    <TextView
                        android:id="@+id/settings_textView2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/settings_btn_edit1"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center|right"
                    android:layout_marginEnd="16dp"
                    android:background="#00000000"
                    android:text="@string/text_edit" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/settings_CardView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_CardView1"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusable="true"
            android:stateListAnimator="@anim/raise"
            materialdesign:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/settings_imageView2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center|top|left"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/settings_imageView2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/settings_textView3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"/>

                    <TextView
                        android:id="@+id/settings_textView4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/settings_btn_edit2"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center|right"
                    android:layout_marginEnd="16dp"
                    android:background="#00000000"
                    android:text="@string/text_edit" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/settings_CardView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_CardView2"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusable="true"
            android:stateListAnimator="@anim/raise"
            android:visibility="gone"
            materialdesign:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/settings_norma_iv1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center|top|left"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_norma" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/settings_norma_iv1">

                    <TextView
                        android:id="@+id/settings_norma_tv1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp" />

                    <TextView
                        android:id="@+id/settings_norma_tv2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/settings_norma_bt1"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginEnd="16dp"

                    android:background="#00000000"
                    android:text="@string/settings_import"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/settings_CardView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_CardView3"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusable="true"
            android:stateListAnimator="@anim/raise"
            materialdesign:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/settings_bk_iv1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center|top|left"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/settings_bk_iv1"
                    android:layout_toRightOf="@+id/settings_bk_iv1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/settings_bk_tv1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="@string/settings_backup" />

                    <TextView
                        android:id="@+id/settings_bk_tv2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp" />
                </LinearLayout>


                <Button
                    android:id="@+id/settings_bk_bt1"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginEnd="16dp"

                    android:background="#00000000"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:text="@string/settings_export" />

                <Button
                    android:id="@+id/settings_bk_bt2"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"

                    android:background="#00000000"
                    android:text="@string/settings_import"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/settings_bk_bt1"
                    android:layout_toStartOf="@+id/settings_bk_bt1" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <oak.svg.AnimatedSvgView
        android:id="@+id/animated_svg_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:gravity="bottom"
        materialdesign:oakSvgFillStart="1300"
        materialdesign:oakSvgFillTime="1000"
        materialdesign:oakSvgImageSizeX="1000"
        materialdesign:oakSvgImageSizeY="1000"
        materialdesign:oakSvgTraceTime="2000"
        materialdesign:oakSvgTraceTimePerGlyph="1000" />
</LinearLayout>