<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:appx="http://schemas.android.com/apk/lib/com.squareup.timessquare">

    <item android:state_selected="true" android:drawable="@drawable/bg_circle_selected"/>
    <item android:state_pressed="true" android:drawable="@drawable/bg_circle_selected"/>

    <item appx:state_current_month="false" >
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
        </shape>
    </item>


    <item appx:state_today="true" android:drawable="@drawable/bg_circle_today"/>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/custom_background"/>
        </shape>
    </item>
</selector>
